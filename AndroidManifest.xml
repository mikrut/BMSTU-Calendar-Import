<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.bmstu.schedule.calendar"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name="ru.bmstu.schedule.activities.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="ru.bmstu.schedule.activities.SuggestDoImportActivity" android:label="doimportactivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    	<activity android:name="ru.bmstu.schedule.activities.SettingsActivity" android:label="settingsactivity"></activity>
    	<activity android:name="ru.bmstu.schedule.activities.WeekActivity" android:label="weekactivity"></activity>
    	<receiver android:enabled="true" android:name="ru.bmstu.schedule.invisible.SoundManager" android:exported="false">
    	    <action android:name="ru.bmstu.schedule.invisible.SoundManager.TURN_ON"/>
    	    <action android:name="ru.bmstu.schedule.invisible.SoundManager.TURN_OFF"/>
    	</receiver>
    	<receiver android:enabled="true" android:name="ru.bmstu.schedule.invisible.DailySetter" android:exported="false">
    	    <action android:name="android.intent.action.BOOT_COMPLETED"/>
    	    <action android:name="ru.bmstu.schedule.invisible.DailySetter.ACTION_SET_ALL"/>
    	    <action android:name="ru.bmstu.schedule.invisible.DailySetter.ACTION_SET_ALARMS"/>
    	</receiver>
    </application>

</manifest>
